{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Products list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Productname</th>
                <th>Productdescription</th>
                <th>Datecreated</th>
                <th>Dateupdated</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('products_show', { 'id': entity.id }) }}">{{ entity.productname }}</a></td>
                <td>{{ entity.productdescription }}</td>
                <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateupdated %}{{ entity.dateupdated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('products_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('products_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('products_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
